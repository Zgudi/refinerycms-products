<%= form_for [:admin, @line_item] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @line_item,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :cart -%>
    <%= f.text_field :cart, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :product -%>
    <%= f.text_field :product  -%>
  </div>
  
  <div class='field'>
    <%= f.label :quantity -%>
    <%= f.text_field :quantity  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.line_items.line_item'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete')
              } %>
<% end -%>
